<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "form-signin"}) do |form| %>
  <h2 class="form-signin-heading">Please sign in</h2>

  <%= form.label :username, class: "sr-only"%>Username<br />
  <%= form.text_field :username, class: "form-control", placeholder: "Username", autofocus: true %>

  <%= form.label :password, class: "sr-only" %><br />
  <%= form.password_field :password, class: "form-control", placeholder: "Password", autocomplete: "off", required: "" %>

  <% if devise_mapping.rememberable? -%>
    <div class="checkbox">
      <label>
        <%= form.check_box :remember_me %> Remember me
      </label>
    </div>
  <% end -%>

  <div class="actions">
    <%= form.submit "Sign in", class: "btn btn-lg btn-primary btn-block" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
